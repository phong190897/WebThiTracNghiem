@model WebThiTracNghiem.Areas.Admin.Data.KetQuaBaiThiModel
@{
    ViewBag.Title = "NopBai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{}

@{
    int i = 1;
    double diem = Math.Round(((double)Model.Diem / (double)Model.TongSoCau) * 10, 1);
}


<style>
    h2 {
        text-align: center
    }

    .container {
        text-align: center;
        font-size: 15px;
        margin-bottom: 20px;
    }

    fieldset {
        border: 1px solid #ddd !important;
        text-align: center;
    }

    .row {
        padding-bottom: 10px;
        padding-top: 10px;
    }

    label {
        font-weight: 100;
    }
</style>

<div class="container">
    <fieldset>
        <legend style="font-size:50px">Kết Quả</legend>
        <h2>@ViewBag.MonThi</h2>
        <div>
            <p>Mã Đề: @Model.MaDe</p>
            <p>Thời gian làm bài: @Model.ThoiGianLamBai Phút</p>
            <p>Số Câu Đúng: @Model.SoCauDung / @Model.TongSoCau Câu</p>
            <p>Điểm: @diem / 10</p>
        </div>
    </fieldset>
</div>
@foreach (var item in Model.CauHois)
{
    <div class="containerCustom">
        <div class="row" style="font-weight:900">
            @i /  @item.TenCauHoi
        </div>
        <div class="row">
            <div class="col-md-6">
                @if (item.DapAnChu.Contains("A"))
                {
                    <input type="radio" name="answer_@item.MaCauHoi" checked value="@item.A" id="A_@item.MaCauHoi" />
                }
                else
                {
                    <input type="radio" name="answer_@item.MaCauHoi" value="@item.A" id="A_@item.MaCauHoi" />
                }
                <label for="A_@item.MaCauHoi" style="font-style:normal"><strong style="padding-left:3px;">A/</strong> @item.A</label>

            </div>
            <div class="col-md-6">
                @if (item.DapAnChu.Contains("B"))
                {
                    <input type="radio" name="answer_@item.MaCauHoi" checked value="@item.B" id="B_@item.MaCauHoi" />
                }
                else
                {
                    <input type="radio" name="answer_@item.MaCauHoi" value="@item.B" id="B_@item.MaCauHoi" />
                }
                <label for="B_@item.MaCauHoi"><strong style="padding-left:3px;">B/</strong> @item.B</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @if (item.DapAnChu.Contains("C"))
                {
                    <input type="radio" name="answer_@item.MaCauHoi" checked value="@item.C" id="C_@item.MaCauHoi" />
                }
                else
                {
                    <input type="radio" name="answer_@item.MaCauHoi" value="@item.C" id="C_@item.MaCauHoi" />
                }
                <label for="C_@item.MaCauHoi"><strong style="padding-left:3px;">C/</strong> @item.C</label>
            </div>
            <div class="col-md-6">
                @if (item.DapAnChu.Contains("D"))
                {
                    <input type="radio" name="answer_@item.MaCauHoi" checked value="@item.D" id="D_@item.MaCauHoi" />
                }
                else
                {
                    <input type="radio" name="answer_@item.MaCauHoi" value="@item.D" id="D_@item.MaCauHoi" />
                }
                <label for="D_@item.MaCauHoi"><strong style="padding-left:3px;">D/</strong> @item.D</label>
            </div>
        </div>
        <p class="col-md-12" style="background-color:antiquewhite"><strong>Đáp Án:</strong> @item.DapAn</p>
        <br />
        <hr />
    </div>

    i++;
}

<div class="row" style="text-align:center; margin-top:45px; margin-bottom:30px">
    <a class="btn btn-info" href="@Url.Action("Index", "Home")">
        <i class="fa fa-play"></i>
        Thoát
    </a>

</div>

<script>
    
</script>


