@model IEnumerable<WebThiTracNghiem.Areas.Admin.Data.MonModel>
@{
    ViewBag.Title = "ThiThu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    Chọn Môn Thi
}

<style>
    .container{
        text-align:center;
        padding-top:50px;
    }

    .row{
        text-align:center;
    }
</style>

<div class="container">
    @using (Html.BeginForm("ThongTinBaiThi", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("MaMon", "Môn Thi", htmlAttributes: new { @class = "control-label" })

            @Html.DropDownList("MaMon", (IEnumerable<SelectListItem>)ViewBag.MonThi, "Please Select",
                  new { htmlAttributes = new { @class = "form-control", @id = "MaMon", @name = "MaMon" } })

            @Html.ValidationMessage("MaMon", "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Tiếp Theo" class="btn btn-default" />
            </div>
        </div>
    }
</div>


