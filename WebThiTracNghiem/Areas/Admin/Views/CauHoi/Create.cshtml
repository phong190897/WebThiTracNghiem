@model WebThiTracNghiem.Areas.Admin.Data.CauHoiModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-horizontal">
                                <h4>CauHoiModel</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaCauHoi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextBoxFor(model => model.MaCauHoi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MaCauHoi, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenCauHoi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextAreaFor(model => model.TenCauHoi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenCauHoi, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.A, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextAreaFor(model => model.A, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.A, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.B, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextAreaFor(model => model.B, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.B, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.C, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextAreaFor(model => model.C, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.C, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.D, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextAreaFor(model => model.D, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.D, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DapAn, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.TextAreaFor(model => model.DapAn, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DapAn, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaLoaiCauHoi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownListFor(model => model.MaLoaiCauHoi, new List<SelectListItem>()
                                    {
                                        new SelectListItem(){Selected=true,Text="Nhận biết biển báo", Value="BB"},
                                        new SelectListItem(){Selected=false,Text="Xử Lý Tình Huống", Value="XL"}
                                    }, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MaLoaiCauHoi, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaMon, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownListFor(model => model.MaMon, new List<SelectListItem>()
                                    {
                                        new SelectListItem(){Selected=true,Text="Bằng Lái A1", Value="A1"},
                                        new SelectListItem(){Selected=false,Text="Bằng Lái A2", Value="A2"}
                                    }, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MaMon, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
