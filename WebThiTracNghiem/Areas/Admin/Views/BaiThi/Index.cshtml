@model IEnumerable<WebThiTracNghiem.Areas.Admin.Data.BaiThiModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh Sách Bài Thi
}

<style>
    .actions {
        background-color: chartreuse;
    }

    th {
        text-align: center
    }
</style>

<div class="actions" style="float:right; border:1px solid; margin-bottom:15px">
    <a href="@Url.Action("Create", "BaiThi")" class="btn sbold green">
        Add New
        <i class="fa fa-plus"></i>
    </a>
</div>
@*<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
    </div>*@
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="col-md-1">Mã Bài Thi</th>
                                <th class="col-md-6">Tài Khoản</th>
                                @*<th>Đáp Án A</th>
                                    <th>Đáp Án B</th>
                                    <th>Đáp Án C</th>
                                    <th>Đáp Án D</th>
                                    <th>Đáp Án Chính Xác</th>
                                    <th>Hình Ảnh</th>*@
                                <th class="col-md-1">Điểm</th>
                                <th class="col-md-1">Thời Gian Hoàn Thành</th>
                                <th class="col-md-1">Số Câu Đúng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX" id="row_@item.MaBaiThi">
                                    <td>@item.MaBaiThi</td>
                                    <td>@item.TaiKhoan</td>
                                    @*<td>@item.A</td>
                                        <td>@item.B</td>
                                        <td>@item.C</td>
                                        <td>@item.D</td>
                                        <td>@item.DapAn</td>
                                        <td>@item.HinhAnh</td>*@
                                    <td>@item.Diem</td>
                                    <td>@item.ThoiGianHoanThanh</td>
                                    <td>@item.SoCauDung</td>
                                    <td style="text-align:center">
                                        <a class="btn btn-info  btn-outline  btn-sm edit-label" id="edit-@item.MaBaiThi" href="@Url.Action("Edit", "BaiThi",new { id=item.MaBaiThi})" @*onclick="onEdit('@item.Id')"*@>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger  btn-outline  btn-sm dele-label" id="dele-@item.MaBaiThi" onclick="DeleteBaiThi('@item.MaBaiThi')">
                                            Delete
                                        </a>
                                        <a class="btn btn-info  btn-outline  btn-sm edit-label" id="edit-@item.MaBaiThi" href="@Url.Action("Details", "BaiThi",new { id=item.MaBaiThi})" @*onclick="onEdit('@item.Id')"*@>
                                            Detail
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script>
    function DeleteBaiThi(pid) {
        bootbox.confirm("Do you want delete bai thi ?", function (res) {
            debugger;
            if (res === true) {
                $.post("@Url.Action("Delete", "BaiThi")", { id: pid }, function (res) {
                    if (res === true)
                        bootbox.alert("Delete sucess!", function () { location.reload(); });
                });
            }
        });
    }
</script>

