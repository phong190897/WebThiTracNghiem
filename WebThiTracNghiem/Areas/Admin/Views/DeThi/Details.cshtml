@model WebThiTracNghiem.Areas.Admin.Data.DeThiModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thông Tin Đề Thi
}

<style>
    .deThiInfo {
        text-align: center
    }

    h2{
        text-align:center;
    }

    .cauhoi {
        padding: 5px 5px 5px 5px;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông Tin Câu Hỏi
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="deThiInfo">
                            <p><strong>Mã Đề Thi:</strong> @Model.MaDe - <strong>Tên Môn Thi:</strong> @Model.TenMon</p>
                            <p><strong>Tác Giả:</strong> @Model.TacGia</p>
                            <p><strong>Thời Gian Làm Bài:</strong> @Model.ThoiGianLamBai Phút</p>
                            <p><strong>Tổng Số Câu Hỏi:</strong> @Model.TongCauHoi Câu</p>
                            <p><strong>Chú Thích:</strong> @Model.ChuThich</p>
                        </div>

                        <h2><u>Danh Sách Câu Hỏi</u></h2>
                        @if (ViewBag.ListCauHoi != null)
                        {
                            foreach (var item in ViewBag.ListCauHoi)
                            {
                                <p class="cauhoi">@item</p>
                            }
                        }


