@model IEnumerable<WebThiTracNghiem.Areas.Admin.Data.LoaiCauHoiModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh Sách Câu Hỏi
}

<style>
    .actions {
        background-color: chartreuse;
    }

    th {
        text-align: center
    }
</style>

<div class="actions" style="float:right; border:1px solid; margin-bottom:15px">
    <a href="@Url.Action("Create", "LoaiCauHoi")" class="btn sbold green">
        Add New
        <i class="fa fa-plus"></i>
    </a>
</div>
@*<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
    </div>*@
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="col-md-1">Mã Loại Câu Hỏi</th>
                                <th class="col-md-6">Tên Loại Câu Hỏi</th>
                                @*<th>Đáp Án A</th>
                                    <th>Đáp Án B</th>
                                    <th>Đáp Án C</th>
                                    <th>Đáp Án D</th>
                                    <th>Đáp Án Chính Xác</th>
                                    <th>Hình Ảnh</th>*@
                                @*<th class="col-md-1">Loại Câu Hỏi</th>
                                <th class="col-md-1">Môn Thi</th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX" id="row_@item.MaLoaiCauHoi">
                                    <td>@item.MaLoaiCauHoi</td>
                                    <td>@item.TenLoaiCauHoi</td>
                                    @*<td>@item.A</td>
                                        <td>@item.B</td>
                                        <td>@item.C</td>
                                        <td>@item.D</td>
                                        <td>@item.DapAn</td>
                                        <td>@item.HinhAnh</td>*@
                                    @*<td>@item.TenLoaiCauHoi</td>
                                    <td>@item.TenMonHoc</td>*@
                                    <td style="text-align:center">
                                        <a class="btn btn-info  btn-outline  btn-sm edit-label" id="edit-@item.MaLoaiCauHoi" href="@Url.Action("Edit", "LoaiCauHoi",new { id=item.MaLoaiCauHoi})" @*onclick="onEdit('@item.Id')"*@>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger  btn-outline  btn-sm dele-label" id="dele-@item.MaLoaiCauHoi" onclick="DeleteLoaiCauHoi('@item.MaLoaiCauHoi')">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script>
    function DeleteLoaiCauHoi(pid) {
        bootbox.confirm("Do you want delete this item ?", function (res) {
            debugger;
            if (res === true) {
                $.post("@Url.Action("Delete", "LoaiCauHoi")", { id: pid }, function (res) {
                    if (res === true)
                        bootbox.alert("Delete sucess!", function () { location.reload(); });
                });
            }
        });
    }
</script>

